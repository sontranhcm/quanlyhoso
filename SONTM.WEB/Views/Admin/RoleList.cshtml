@using SONTM.WEB.Entities
@model List<ApplicationRole>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Mã vai trò</th>
            <th scope="col">Tên Vai trò</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @{
            var index = 1;
        }
        @foreach (var role in Model)
        {

            <tr>
                <th scope="row">@index</th>
                <td>@role.Code</td>
                <td>@role.Name</td>
                <td>@role.Description</td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm"><i class="fas fa-lock"></i>Khóa</button>
                </td>
            </tr>

        }
    </tbody>
</table>