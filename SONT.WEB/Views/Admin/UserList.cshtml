@using SONT.WEB.Entities;
@model IEnumerable<ApplicationUser>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("EditUser", new { id = user.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("DeleteUser", new { id = user.Id })" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("ManageUserRoles", new { userId = user.Id })" class="btn btn-secondary">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
