@using SONT.WEB.Models;
@model List<ManageUserRolesViewModel>

<h2>Manage User Roles</h2>

<form asp-action="ManageUserRoles" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="userId" value="@ViewBag.userId" />
    <table class="table">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Selected</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.RoleName</td>
                    <td>
                        <input asp-for="@role.IsSelected" />
                        <input type="hidden" asp-for="@role.RoleId" />
                        <input type="hidden" asp-for="@role.RoleName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
